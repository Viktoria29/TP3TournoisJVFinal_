@model IEnumerable<TP3TournoisJVFinal.Models.Tournoi>

@{
    ViewData["Title"] = "Search";
}

<h1>Recherche Avancée </h1>

@using (Html.BeginForm("RechercheAvance", "Tournoi", FormMethod.Get, new { @class = "form-inline" }))
{
    <div class="form-group">
        <label class="col-form-label"> Recherche par Nom</label>
        @Html.TextBox("rechercheNom", null, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label class="col-form-label"> Recherche par Jeu</label>
        @Html.TextBox("rechercheJeu", null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label class="col-form-label"> Recherche par Prix</label>
        @Html.TextBox("recherchePrix", null, new { @class = "form-control", type="number"})
    </div>

    <div class="form-group">
        <label class="col-form-label"> Recherche par Date</label>
        @Html.TextBox("rechercheDate", null, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label class="col-form-label"> Recherche par Theme</label>
        @Html.TextBox("rechercheTheme", null, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <input type="submit" value="recherche" class="form-control" />
    </div>

}

<p>
    <a asp-action="Search">Recherche avancée</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prix)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jeu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Theme)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prix)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Jeu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Theme)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdTournoi">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdTournoi">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdTournoi">Delete</a>
                </td>
            </tr>
        }


    </tbody>
</table>

<p>
    <a asp-action="Create">Créer un nouveau tournoi</a>
</p>
